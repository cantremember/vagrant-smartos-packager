echo "*************************************************************"
echo "Updating system to allow user modification"
mkdir -p /opt/custom/smf
mkdir -p /opt/custom/method

wget -q --no-check-certificate https://raw.github.com/sax/vagrant-smartos-packager/master/files/install-gz-files -O /opt/custom/method/install-gz-files
wget -q --no-check-certificate https://raw.github.com/sax/vagrant-smartos-packager/master/files/install-gz-files.xml -O /opt/custom/smf/install-gz-files.xml

wget -q --no-check-certificate https://raw.github.com/sax/vagrant-smartos-packager/master/files/persist-gz-files -O /opt/custom/method/persist-gz-files
wget -q --no-check-certificate https://raw.github.com/sax/vagrant-smartos-packager/master/files/persist-gz-files.xml -O /opt/custom/smf/persist-gz-files.xml

chmod -R +x /opt/custom/method

svccfg import /opt/custom/smf/install-gz-files.xml
svccfg import /opt/custom/smf/persist-gz-files.xml

echo "*************************************************************"
echo "In order to use tools such as usermod, please do the following:"
echo "  svcadm disable -s persist-userfiles"
echo "  useradd ..."
echo "  svcadm enable -s persist-userfiles"
echo
echo
echo "*************************************************************"
echo "Now reboot to ensure that everything is kosher."
